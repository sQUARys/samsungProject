<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/for_list_weather"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <!--<View-->
    <!--android:id="@+id/line"-->
    <!--android:layout_width="70dp"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="#000"-->
    <!--android:layout_marginTop="3dp"-->
    <!--android:layout_below="@+id/part_of_sun"/>-->
    <ImageView
        android:id="@+id/part_of_sun"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="0dp"
        android:layout_marginBottom="14dp"
        android:layerType="software"
        android:src="@drawable/sunny" />

    <TextView
        android:id="@+id/temp_avg"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/part_of_sun"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/for_main"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/temp_avg"
        android:gravity="center"
        android:text="Четверг" />

</RelativeLayout>